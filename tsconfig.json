{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",   
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true, 
    "strict": true, 
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}